<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Superheroes</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .character-card {
            margin: 20px;
            cursor: pointer;
            transition: transform 0.2s;
        }
        .character-card:hover {
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center my-4">All Superheroes</h1>
        <div class="row">
            <% characterList.forEach(character => { %>
                <div class="col-md-3">
                    <div class="card character-card" onclick="window.location='/<%= character.id %>'">
                        <img src="<%= character.image %>" class="card-img-top" alt="<%= character.name %> Image"> <!-- Mostrar la imagen del personaje -->
                        <div class="card-body">
                            <h5 class="card-title"><%= character.name %></h5> <!-- Mostrar el nombre del personaje -->
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= character.name %> - Superhero Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="./css/styles.css">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/characters">Superhero Viewer</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link" href="/<%= previousCharacterId %>"><strong>&larr; Previous</strong></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/<%= nextCharacterId %>"><strong>Next &rarr;</strong></a>
              </li>
              <li class="nav-item">
                <form class="d-flex" action="/searching" method="POST">
                  <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="searched">
                  <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
              </li>
            </ul>
          </div>
        </div>
      </nav>

    <div class="character-container">
        <img src="<%= character.images.lg %>" class="character-image" alt="<%= character.name %>">

        <div class="character-info">
            <h4 class="card-title"><%= character.name %> (<%= character.biography.fullName %>)</h4>
            <p><strong>ID:</strong> <%= character.id %></p>
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Gender:</strong> <%= character.appearance.gender %></p>
                    <p><strong>Height:</strong> <%= character.appearance.height[1].startsWith("0") ? "Unknown" : character.appearance.height[1] %> (<%= character.appearance.height[0].startsWith("0") ? "Unknown" : character.appearance.height[0] %>)</p>
                    <p><strong>Weight:</strong> <%= character.appearance.weight[1].startsWith("0") ? "Unknown" : character.appearance.weight[1] %> (<%= character.appearance.weight[0].startsWith("0") ? "Unknown" : character.appearance.weight[0] %>)</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Race:</strong> <%= character.appearance.race ? character.appearance.race : 'Unknown' %></p>
                    <p><strong>Eye Color:</strong> <%= character.appearance.eyeColor %></p>
                    <p><strong>Hair Color:</strong> <%= character.appearance.hairColor %></p>
                </div>
            </div>

            <h6 class="mt-3">Powerstats</h6>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Stat</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    <tr><td>Intelligence</td><td><%= character.powerstats.intelligence %></td></tr>
                    <tr><td>Strength</td><td><%= character.powerstats.strength %></td></tr>
                    <tr><td>Speed</td><td><%= character.powerstats.speed %></td></tr>
                    <tr><td>Durability</td><td><%= character.powerstats.durability %></td></tr>
                    <tr><td>Power</td><td><%= character.powerstats.power %></td></tr>
                    <tr><td>Combat</td><td><%= character.powerstats.combat %></td></tr>
                </tbody>
            </table>

            <h6 class="mt-3">Place of Birth</h6>
            <p><%= character.biography.placeOfBirth ? character.biography.placeOfBirth : 'Unknown' %></p>

            <h6 class="mt-3">Biography</h6>
            <p><%= character.biography.alignment === 'good' ? 'Hero' : 'Villain' %></p>

            <h6 class="mt-3">Aliases</h6>
            <% if (character.biography.aliases.length > 0) { %>
                <ul>
                    <% character.biography.aliases.forEach(function(alias) { %>
                        <li><%= alias %></li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No known aliases.</p>
            <% } %>

            <h6 class="mt-3">Group Affiliation</h6>
            <% if (character.connections.groupAffiliation) { %>
                <ul>
                    <% character.connections.groupAffiliation.split(',').forEach(function(group) { %>
                        <li><%= group %></li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No group affiliations.</p>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
